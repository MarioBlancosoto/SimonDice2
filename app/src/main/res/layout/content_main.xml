<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mbs.simondice.MainActivity"
    android:background="@drawable/simon"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/lienzoV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/lienzoR"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:columnCount="3"
            android:rowCount="3">

            <ImageButton
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/botonimagen"

                app:srcCompat="@android:drawable/ic_media_play" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@drawable/botonazul"

                 />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/botonverde"

                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/botonrojo"

                />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="@drawable/botonamarillo"

                 />
        </GridLayout>

        <LinearLayout
            android:id="@+id/lienzoH"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textopuntuacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:lineSpacingExtra="12sp"
                android:text="PUNTUACIÃ“N :"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/texto2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:lineSpacingExtra="12sp"
                android:text="NIVEL:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lienzoh2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textoPuntuacion"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_light"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textoLvl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="40sp"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
