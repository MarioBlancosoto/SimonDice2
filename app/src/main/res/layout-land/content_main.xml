<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/lienzoV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/simon"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <GridLayout
            android:id="@+id/lienzoR"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:columnCount="3"
            android:rowCount="3">

            <ImageButton
                android:id="@+id/btnStart"
                android:layout_column="1"

                android:layout_columnWeight="1"

                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/botonimagen" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"

                android:layout_columnWeight="1"

                android:layout_row="0"
                android:layout_rowWeight="1"
                android:alpha="1"

                android:background="@drawable/botonazul"
                 />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"

                android:layout_columnWeight="1"

                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/botonverde"

                 />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"

                android:layout_columnWeight="1"

                android:layout_row="1"
                android:layout_rowWeight="1"

                android:background="@drawable/botonrojo"
                />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"

                android:layout_columnWeight="1"

                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="@drawable/botonamarillo"

                />
        </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtpuntuacion"
            android:layout_width="match_parent"
            android:layout_height="78dp"


            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:lineSpacingExtra="12sp"
            android:text="PUNTUACION:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textoPuntuacion"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textoNivel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:lineSpacingExtra="10sp"
            android:text="NIVEL :"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textoLvl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"
            android:textSize="40sp" />

    </LinearLayout>
    </LinearLayout>

